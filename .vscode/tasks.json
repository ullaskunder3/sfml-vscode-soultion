{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C++ program with SFML",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.out",
                "${file}",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "label": "Run C++ program with SFML",
            "type": "shell",
            "command": "${workspaceFolder}/build/${fileBasenameNoExtension}.out",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build C++ program with SFML"
        }
    ]
}
